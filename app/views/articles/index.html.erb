<ul>
  <% @articles.each do |article| %>
    <li>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= article.published_at.strftime("%b %d, %Y") %> - <span><%= article.published_at.strftime("%H:%M") %></span></p>
      <p><%= article.content %></p>
      <hr>
    </li>
  <% end %>
</ul>
