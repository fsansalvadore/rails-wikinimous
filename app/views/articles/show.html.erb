<div>
<div class="article">
  <h1><%= @article.title %></h1>
  <p><%= @article.published_at.strftime("%b %d, %Y") %> - <span><%= @article.published_at.strftime("%H:%M") %></span></p>
  <hr>
  <p><%= @article.content %></p>
</div>
<div class="article-btns">
<%= link_to "< Go to all articles", articles_path, class: "btn btn-primary btn-sm" %>
  <div class="action-btns">
    <%= link_to "Edit ✎", edit_article_path(@article), class: "btn btn-info btn-sm" %>
    <%= link_to "Delete ✕", article_path(@article), class: "btn btn-danger btn-sm",
    method: :delete,
    data: { confirm: "Are you sure you want to delete?" }
    %>
 </div>
</div>
</div>
